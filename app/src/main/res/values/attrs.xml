<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- QuantitySelector Attributes -->
    <declare-styleable name="QuantitySelector">
        <attr name="quantitySelectorBackground" format="color|reference" />
        <attr name="quantitySelectorTextColor" format="color|reference" />
        <attr name="quantitySelectorButtonTint" format="color|reference" />
        <attr name="quantitySelectorStrokeColor" format="color|reference" />
        <attr name="quantitySelectorStrokeWidth" format="dimension" />
    </declare-styleable>
    <attr name="quantitySelectorStyle" format="reference" />

    <!-- ProductCard Attributes -->
    <declare-styleable name="ProductCard">
        <attr name="titleTextAppearance" format="reference" />
        <attr name="priceTextAppearance" format="reference" />
        <attr name="ratingTextAppearance" format="reference" />
    </declare-styleable>
    <attr name="productCardStyle" format="reference" />

    <!-- LoadingView Attributes -->
    <declare-styleable name="LoadingView">
        <attr name="loadingSize" format="dimension" />
        <attr name="loadingColor" format="color|reference" />
        <attr name="loadingBackgroundColor" format="color|reference" />
    </declare-styleable>
    <attr name="loadingViewStyle" format="reference" />
</resources>

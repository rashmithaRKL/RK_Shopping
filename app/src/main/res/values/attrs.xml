<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shimmer Attributes -->
    <declare-styleable name="Shimmer">
        <attr name="shimmer_highlight_color" format="color" />
        <attr name="shimmer_base_color" format="color" />
        <attr name="shimmer_duration" format="integer" />
        <attr name="shimmer_auto_start" format="boolean" />
        <attr name="shimmerColor" format="color" />
        <attr name="shimmerDuration" format="integer" />
        <attr name="shimmerAngle" format="integer" />
    </declare-styleable>

    <!-- Quantity Selector Attributes -->
    <declare-styleable name="QuantitySelector">
        <attr name="quantitySelectorStyle" format="reference" />
        <attr name="quantitySelectorBackground" format="color" />
        <attr name="quantitySelectorTextColor" format="color" />
        <attr name="quantitySelectorButtonTint" format="color" />
        <attr name="quantitySelectorStrokeColor" format="color" />
        <attr name="quantitySelectorStrokeWidth" format="dimension" />
    </declare-styleable>

    <!-- Loading View Attributes -->
    <declare-styleable name="LoadingView">
        <attr name="loadingViewStyle" format="reference" />
        <attr name="loadingAlpha" format="float" />
        <attr name="successScale" format="float" />
        <attr name="animateToCircle" format="boolean" />
        <attr name="showSuccessState" format="boolean" />
        <attr name="loadingColor" format="color" />
        <attr name="loadingBackgroundColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="successColor" format="color" />
        <attr name="progressStrokeWidth" format="dimension" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>

    <!-- Product Card Attributes -->
    <declare-styleable name="ProductCard">
        <attr name="productCardStyle" format="reference" />
    </declare-styleable>
</resources>

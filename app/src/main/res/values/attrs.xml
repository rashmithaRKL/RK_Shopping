<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Common Attributes -->
    <attr name="progressColor" format="color" />
    <attr name="successColor" format="color" />
    <attr name="animationDuration" format="integer" />
    <attr name="loadingColor" format="color" />
    <attr name="loadingBackgroundColor" format="color" />
    <attr name="progressStrokeWidth" format="dimension" />

    <!-- Facebook Shimmer Root Attributes -->
    <declare-styleable name="ShimmerFrameLayout">
        <attr name="shimmer_color" format="color"/>
        <attr name="shimmer_highlight_color" format="color"/>
        <attr name="shimmer_base_color" format="color"/>
        <attr name="shimmer_duration" format="integer"/>
        <attr name="shimmer_auto_start" format="boolean"/>
        <attr name="shimmer_repeat_count" format="integer"/>
        <attr name="shimmer_repeat_delay" format="integer"/>
        <attr name="shimmer_repeat_mode" format="enum">
            <enum name="restart" value="1"/>
            <enum name="reverse" value="2"/>
        </attr>
        <attr name="shimmer_direction" format="enum">
            <enum name="left_to_right" value="0"/>
            <enum name="right_to_left" value="1"/>
            <enum name="top_to_bottom" value="2"/>
            <enum name="bottom_to_top" value="3"/>
        </attr>
        <attr name="shimmer_dropoff" format="float"/>
        <attr name="shimmer_intensity" format="float"/>
        <attr name="shimmer_mask_width" format="float"/>
        <attr name="shimmer_tilt" format="float"/>
    </declare-styleable>

    <!-- Custom Shimmer Layout Attributes -->
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmerColor" format="color"/>
        <attr name="shimmerDuration" format="integer"/>
        <attr name="shimmerAngle" format="integer"/>
    </declare-styleable>

    <!-- Quantity Selector Attributes -->
    <declare-styleable name="QuantitySelector">
        <attr name="quantitySelectorStyle" format="reference" />
        <attr name="quantitySelectorBackground" format="color|reference" />
        <attr name="quantitySelectorTextColor" format="color" />
        <attr name="quantitySelectorButtonTint" format="color" />
        <attr name="quantitySelectorStrokeColor" format="color" />
        <attr name="quantitySelectorStrokeWidth" format="dimension" />
    </declare-styleable>

    <!-- Loading View Attributes -->
    <declare-styleable name="LoadingView">
        <attr name="loadingViewStyle" format="reference" />
        <attr name="loadingAlpha" format="float" />
        <attr name="successScale" format="float" />
        <attr name="animateToCircle" format="boolean" />
        <attr name="showSuccessState" format="boolean" />
        <attr name="loadingColor" />
        <attr name="loadingBackgroundColor" />
        <attr name="progressColor" />
        <attr name="successColor" />
        <attr name="progressStrokeWidth" />
        <attr name="animationDuration" />
    </declare-styleable>

    <!-- Product Card Attributes -->
    <declare-styleable name="ProductCard">
        <attr name="productCardStyle" format="reference" />
    </declare-styleable>

    <!-- Custom Loading View Attributes -->
    <declare-styleable name="CustomLoadingView">
        <attr name="progressColor" />
        <attr name="successColor" />
        <attr name="progressStrokeWidth" />
        <attr name="animationDuration" />
    </declare-styleable>
</resources>

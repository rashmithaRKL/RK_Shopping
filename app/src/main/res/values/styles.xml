<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Quantity Selector Style -->
    <style name="Widget.RKShopping.QuantitySelector" parent="">
        <item name="quantitySelectorBackground">@color/white</item>
        <item name="quantitySelectorTextColor">@color/black</item>
        <item name="quantitySelectorButtonTint">@color/primary</item>
        <item name="quantitySelectorStrokeColor">@color/gray</item>
        <item name="quantitySelectorStrokeWidth">1dp</item>
    </style>

    <!-- Product Card Style -->
    <style name="Widget.RKShopping.ProductCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Loading View Style -->
    <style name="Widget.RKShopping.LoadingView" parent="">
        <item name="loadingColor">@color/loading_color</item>
        <item name="loadingBackgroundColor">@color/loading_background_color</item>
        <item name="loadingAlpha">0.8</item>
        <item name="successScale">0.75</item>
        <item name="animateToCircle">true</item>
        <item name="showSuccessState">true</item>
        <item name="progressColor">@color/progress_color</item>
        <item name="successColor">@color/success</item>
        <item name="progressStrokeWidth">4dp</item>
        <item name="animationDuration">300</item>
    </style>

    <!-- Shimmer Style -->
    <style name="Widget.RKShopping.Shimmer" parent="">
        <item name="shimmerColor">@color/shimmer_placeholder_color</item>
        <item name="shimmerDuration">1000</item>
        <item name="shimmerAngle">20</item>
        <item name="shimmerMaskWidth">0.5</item>
        <item name="autoStart">true</item>
    </style>
</resources>

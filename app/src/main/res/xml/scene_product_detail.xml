<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/scrollView"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>
            <!-- Fade out the image -->
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="85"
                motion:motionTarget="@id/imageViewPager" />

            <!-- Scale down the toolbar -->
            <KeyAttribute
                motion:framePosition="85"
                motion:motionTarget="@id/toolbar">
                <CustomAttribute
                    motion:attributeName="elevation"
                    motion:customFloatValue="4dp" />
            </KeyAttribute>

            <!-- Animate bottom bar -->
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="90"
                motion:motionTarget="@id/bottomBar" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/imageViewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bottomBar"
            motion:layout_constraintTop_toBottomOf="@id/imageViewPager" />

        <Constraint
            android:id="@id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/imageViewPager"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bottomBar"
            motion:layout_constraintTop_toBottomOf="@id/imageViewPager" />

        <Constraint
            android:id="@id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <!-- Add transition for shared element -->
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/shared_element_start"
        motion:duration="400"
        motion:motionInterpolator="easeInOut">
        
        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/imageViewPager"
                motion:percentX="0.5"
                motion:percentY="0.2" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/shared_element_start">
        <Constraint
            android:id="@id/imageViewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>
